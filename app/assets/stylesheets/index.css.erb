@font-face
{
  font-family: OneDirection;
  src: url(<%= image_path "OneDirection.ttf"%>);
}

body {
  margin: 0px;
  background: url(<%= image_path "texture.png"%>);
}

p {
  text-align: center;
  padding-left: 50px;
  padding-right: 50px;
  line-height: 2em;
  font-size: 13px;
  margin: 0px;
  font-family: Merriweather, serif;
  font-weight: normal;
}

h1 {
  width: 100%;
  text-align: center;
  font-family: Love Ya Like A Sister, cursive;
  font-size: 64px;
  color: #333333;
  font-weight: normal;
}

h2 {
  width: 100%;
  text-align: center;
  font-family: 'Patrick Hand SC', cursive;
  font-size: 32px;
  color: #333333;
  font-weight: normal;
}

#top {
  position: fixed;
  top: 0px;
  left: 50px;
  width: 100px;
  height: 100px;
  background-image: url(<%= image_path "ribbon.png"%>);
  background-size: cover;
}

#top:hover {
  cursor: pointer;
}

.border {
  margin: auto;
  width: 150px;
  border-bottom: 1px solid #CCCCCC;
  margin-bottom: 25px;
}

.container {
  float: left;
  width: 100%;
}

.content {
  margin: auto;
  width: 1000px;
}

.third {
  width: 333px;
  height: 425px;
  float: left;
}

#navbar_container {
  float: left;
  width: 100%;
  height: 150px;
}

#navbar {
  margin: auto;
  width: 1000px;
  height: 150px;
  background-size: cover;
  background-position: center;
  text-align: center;
}

#logo {
  float: left;
  margin-top: 25px;
  width: 100px;
  height: 100px;
  background-image: url(<%= image_path "logo.png"%>);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

#logo:hover {
  cursor: pointer;
}

.tab {
  float: right;
  text-align: left;
  font-family: 'Patrick Hand SC', cursive;
  border-top: 1px solid #CCCCCC;
  text-decoration: none;
  color: #333333;
  font-size: 20px;
  width: 90px;
  margin: 25px;
  padding-top: 15px;
  margin-top: 65px;
}

.tab:hover {
  border-top: 3px solid #b77ed2;
}

#banner {
  float: left;
  width: 100%;
  height: 550px;
  background-image: url(<%= image_path "banner.jpg"%>);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: top;
}

#banner_title {
  font-weight: bold;
  margin-top: 160px;
  color: #ffffff;
  font-size: 100px;
  line-height: 90px;
}

#banner_blurb {
  font-family: 'Patrick Hand SC', cursive;
  margin-top: -65px;
  width: 100%;
  font-size: 32px;
  text-align: center;
  color: #ffffff;
}

#what {
  margin-bottom: 50px;
}

#featured_container {
  background: url(<%= image_path "tweed.png"%>);
}

#featured {
  color: #ffffff;
}

.project {
  float: left;
  margin: 50px;
  margin-bottom: 100px;
  width: 380px;
  height: 380px;
  border-radius: 200px;
  border: 10px solid #333333;
}

.project:hover {
  cursor: pointer;
}

#project1 {
  background: url(<%= image_path "project1.jpg"%>);
  background-size: cover;
}

#project2 {
  background: url(<%= image_path "project2.jpeg"%>);
  background-size: cover;
}

.media {
  float: left;
  width: 120px;
  height: 120px;
  margin-left: 25px;
  margin-right: 25px;
  border-radius: 65px;
  border: 5px solid #333333;
}

.media:hover {
  cursor: pointer;
  border: 5px solid #b77ed2;
}

#facebook {
  background: url(<%= image_path "facebook.png"%>);
  background-size: cover;
  margin-left: 250px;
}

#facebook:hover {
  background: url(<%= image_path "facebook_alt.png"%>);
  background-size: cover;
}

#linkedin {
  background: url(<%= image_path "linkedin.png"%>);
  background-size: cover;
}

#linkedin:hover {
  background: url(<%= image_path "linkedin_alt.png"%>);
  background-size: cover;
}

#twitter {
  background: url(<%= image_path "twitter.png"%>);
  background-size: cover;
}

#twitter:hover {
  background: url(<%= image_path "twitter_alt.png"%>);
  background-size: cover;
}

#copyright {
  margin-top: 225px;
  margin-bottom: 50px;
}