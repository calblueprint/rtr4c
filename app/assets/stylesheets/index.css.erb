body {
	margin: 0px;
}

#navbar {
	box-sizing: border-box;
	float: left;
	width: 100%;
	height: 225px;
	background: #FFFFFF;
	text-align: center;
}

#logo {
	margin: auto;
	display: block;
	height: 175px;
	width: 175px;
	background-image: url(<%= image_path "logo.svg" %>);
	background-size: cover;
}

#logo:hover {
	background-size: 185px 185px;
	background-position: center;
}

.tab {
	font-family: Oswald, sans-serif;
	text-decoration: none;
	color: #CCCCCC;
	font-size: 1.5em;
	padding: 20px;
	transition: 0.25s;
	-webkit-transition: 0.25s;
}

.tab:hover {
	color: #F5979C;
}

#banner {
	box-sizing: border-box;
	float: left;
	text-align: center;
	width: 100%;
	padding-top: 40px;
	height: 500px;
	background-image: url(<%= image_path "beauty.jpg" %>);
	background-size: cover;
	animation: beautify 4s;
	-webkit-animation: beautify 4s;
}

@keyframes beautify
{
	0%	{background-image: url(<%= image_path "bland.jpg" %>);}
	100%{background-image: url(<%= image_path "beauty.jpg" %>);}
}

@-webkit-keyframes beautify
{
	0%	{background-image: url(<%= image_path "bland.jpg" %>);}
	100%{background-image: url(<%= image_path "beauty.jpg" %>);}
}

#mission {
	font-family: Lobster, cursive;
	font-size: 4em;
	color: white;
	animation: fade 3.5s;
	-webkit-animation: fade 3.5s;
}

.button {
	display: block;
	margin: auto;
	font-family: Oswald, sans-serif;
	text-decoration: none;
	font-size: 1em;
	height: 25px;
	width: 110px;
	padding: 22px;
	border: 2px solid white;
	color: #FFFFFF;
	transition: 0.25s;
	-webkit-transition: 0.25s;
}

#banner_button {
	animation: fade 3.5s;
	-webkit-animation: fade 3.5s;
}

.button:hover {
	border-color: #F5979C;
	color: #F5979C;
}

@keyframes fade
{
	0%	{opacity: 0;}
	75%	{opacity: 0;}
	100%{opacity: 1;}
}

@-webkit-keyframes fade
{
	0%	{opacity: 0;}
	75%	{opacity: 0;}
	100%{opacity: 1;}
}

