.product {
  width: 273px;
  height: 330px;
  margin: 30px;
  padding: 0px;
  text-align: center;
  float: left;
}

.product_specific {
  text-align: center;
}

.product_specific img {
  width: 500px;
  height: 500px;
  border: 10px solid #333;
}

.product_specific p {
  width: 500px;
  margin: auto;
}

.product img {
  width: 250px;
  height: 250px;
  border: 5px solid #333;
}

.product img:hover {
  border: 5px solid #b77ed2;
}

#view_cart {
  display: block;
  padding: 10px;
  border-radius: 5px;
  width: 65px;
  position: relative;
  margin-top: -26px;
  top: -16px;
  left: 875px;
  text-decoration: none;
  color: #fff;
  background: #333;
}

#view_cart:hover {
  background: #b77ed2;
}


#back_product {
  display: block;
  padding: 10px;
  border-radius: 5px;
  width: 30px;
  position: relative;
  top: -2px;
  left: 800px;
  text-decoration: none;
  color: #fff;
  background: #333;
}

#back_product:hover {
  background: #b77ed2;
}

#cart_table img {
  width: 250px;
  height: 250px;
  margin: 25px;
  border: 5px solid #333;
}

#cart_table td {
  padding: 10px;
}

#cart_table input[type="submit"] {
  display: block;
  padding: 10px;
  border-radius: 5px;
  font-size: 13px;
  text-transform: none;
  font-family: Merriweather, serif;
  font-weight: normal;
  width: 75px;
  text-decoration: none;
  color: #fff;
  border: none;
  background: #333;
}

#cart_table input[type="submit"]:hover {
  border: none;
  background: #b77ed2;
}

.remove {
  display: block;
  padding: 10px;
  border-radius: 5px;
  font-size: 13px;
  text-transform: none;
  font-family: Merriweather, serif;
  font-weight: normal;
  width: 55px;
  text-decoration: none;
  color: #fff;
  border: none;
  background: #333;
}

.remove:hover {
  background: #b77ed2;
}
