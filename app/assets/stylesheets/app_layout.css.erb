body {
  margin: 0px;
  background: url(<%= image_path "texture.png"%>);
}

p {
  padding-left: 50px;
  padding-right: 50px;
  line-height: 2em;
  font-size: 13px;
  margin: 0px;
  font-family: Merriweather, serif;
  
}

h1 {
  text-transform: uppercase;
  width: 100%;
  font-family: Oswald, sans-serif;
  font-size: 64px;
  font-weight: normal;
}

h2 {
  width: 100%;
  font-family: 'Special Elite', cursive;
  font-size: 32px;
}

h3 {
  width: 100%;
  font-family: Oswald, sans-serif;
  font-size: 64px;
  margin: 0px;
  margin-top: 50px;
  padding: 0px;
  line-height: 0.5em;
}

p, h1, h2, h3 {
  color: #333333;
  font-weight: normal;
  text-align: center;
}

.admin_buttons {
  margin-top: 15px;
  width: 100%;
  float: left;
}

.admin_buttons a, .fields a {
  float: right;
  margin: 5px;
  padding: 10px;
  border-radius: 5px;
  text-decoration: none;
  color: #fff;
  background: #333;
}

.white {
  color: #ffffff;
}

#navbar_container {
  float: left;
  width: 100%;
  height: 150px;
}

#navbar {
  margin: auto;
  width: 1000px;
  height: 150px;
  background-size: cover;
  background-position: center;
  text-align: center;
}

#logo {
  float: left;
  margin-top: 25px;
  width: 125px;
  height: 110px;
  background-image: url(<%= image_path "logo.png"%>);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

#logo:hover {
  cursor: pointer;
}

.tab {
  float: right;
  font-family: 'Special Elite', cursive;
  border-top: 1px solid #CCCCCC;
  text-decoration: none;
  color: #333333;
  font-size: 16px;
  width: 90px;
  margin: 25px;
  padding-top: 15px;
  margin-top: 75px;
}

.tab:hover {
  border-top: 1px solid #b77ed2;
  box-shadow: 0 -1px 0 #b77ed2;
}

.container {
  float: left;
  padding-bottom: 50px;
  width: 100%;
}

.black_container {
  background: url(<%= image_path "tweed.png"%>);
}

.content {
  margin: auto;
  width: 1000px;
}

.border {
  margin: auto;
  width: 150px;
  border-bottom: 1px solid #CCCCCC;
  margin-bottom: 25px;
}

.white_border {
  margin: auto;
  width: 150px;
  border-bottom: 1px solid #FFFFFF;
  margin-bottom: 25px;
}

.media {
  float: left;
  width: 120px;
  height: 120px;
  margin-left: 15px;
  margin-right: 15px;
  border-radius: 65px;
  border: 5px solid #333333;
}

.media:hover {
  cursor: pointer;
  border: 5px solid #b77ed2;
}

#facebook {
  background: url(<%= image_path "facebook.png"%>);
  background-size: cover;
  margin-left: 280px;
}

#facebook:hover {
  background: url(<%= image_path "facebook_alt.png"%>);
  background-size: cover;
}

#linkedin {
  background: url(<%= image_path "linkedin.png"%>);
  background-size: cover;
}

#linkedin:hover {
  background: url(<%= image_path "linkedin_alt.png"%>);
  background-size: cover;
}

#twitter {
  background: url(<%= image_path "twitter.png"%>);
  background-size: cover;
}

#twitter:hover {
  background: url(<%= image_path "twitter_alt.png"%>);
  background-size: cover;
}

#copyright_border {
  margin: auto;
  margin-top: 220px;
  width: 150px;
  border-bottom: 1px solid #CCCCCC;
  margin-bottom: 25px;
}

#copyright {
  margin-top: 50px;
}

.tooltip {
  text-align: center;
  font-family: 'Special Elite', cursive;
  font-size: 16px;
  display: inline;
  position: relative;
}

.tooltip:hover:before{
  border: solid;
  border-color: #333 transparent;
  border-width: 10px 10px 0 10px;
  top: 15px;
  content: "";
  right: 80px;
  position: absolute;
  z-index: 99;
}

.tooltip:hover:after{
  background: #333;
  border-radius: 5px;
  top: -25px;
  color: #fff;
  content: attr(title);
  right: 20px;
  padding: 15px 15px 10px;
  position: absolute;
  z-index: 98;
}

.tooltip-alt {
  text-align: center;
  font-family: 'Special Elite', cursive;
  font-size: 16px;
  display: inline;
  position: relative;
}

.tooltip-alt:hover:before{
  border: solid;
  border-color: #333 transparent;
  border-width: 10px 10px 0 10px;
  top: 15px;
  content: "";
  right: 80px;
  position: absolute;
  z-index: 99;
}

.tooltip-alt:hover:after{
  background: #333;
  border-radius: 5px;
  top: -40px;
  color: #fff;
  content: attr(title);
  right: 20px;
  padding: 15px 15px 10px;
  position: absolute;
  height: 30px;
  z-index: 98;
}

.new_button {
  width: 20%;
  float: none !important;
  display: block;
  margin: auto;
  margin-top: 50px;
  margin-bottom: 0px;
  padding: 20px 20px 20px 20px;
  border-radius: 15px;
  font-size: 24px;
  font-family: Oswald, sans-serif;
  color: #333333;
  background: transparent;
  border: 3px solid #333333;
  opacity: 1;
  text-transform: uppercase;
  text-align: center;
  text-decoration: none;
}

.new_button:hover {
  cursor: pointer;
  border: 3px solid #b77ed2;
  color: #b77ed2;
}