/* Index Project View */

#admin_add_project {
	font-size: 24px;
}

.featured {
	margin: auto;
  margin-top: 25px;
	margin-bottom: 25px;
	width: 800px;
	height: 300px;
	border-style: solid;
	border-width: 8px;
	border-color:#333333;;
}

.featured:hover {
	cursor: pointer;
  border: 8px solid #b77ed2;
}

#pict_one img {
	height: 300px;
	width: 525px;
	background-size: cover;
	float: left;
}

#pict_two img {
	height: 300px;
	width: 525px;
	background-size: cover;
	float: right;
}

#pict_three img {
	height: 300px;
	width: 525px;
	background-size: cover;
	float: left;
}

#mid {
	float:right;
}


.featured_text {
	background-color: white;
	width: 225px;
	padding: 25px;
	height: 250px;
	float: left;
	text-align: center;
}

.featured_line {
	margin: auto;
	margin-top:30px;
	background-color: black;
	height: 3px;
	width:30px;
}

.featured_text p {
	margin-top: 80px;
	font-family: 'Special Elite', sans-serif;
	font-size: 23px;
	color: black;
	padding-left: 0px;
	padding-right: 0px;
