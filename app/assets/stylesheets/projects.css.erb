.projects_pagination {
	width:800px;
	height:30px;
	margin: auto;
	text-align: center;
	font-size: 24px;
	text-decoration: none;
	color: white;
}

.project_block {
	width: 250px;
	height: 250px;
	float: left;
}

.project_text a, .project_text p {
	text-decoration: none;
	font-size: 24px;
	color: white;
	font-family: 'Special Elite';
	text-align: center;
	padding-left: 0px;
	padding-right: 0px;
}

.project_thumb img{
	height: 190px;
	width: 190px;
	border-radius: 100px;
	border-style: solid;
	border-width: 5px;
	border-color: #333333;
	float: left;
	margin: 25px;
}

.project_thumb img:hover {
	cursor: pointer;
  border: 5px solid #b77ed2;
}

.proj_link {
	margin-left: 900px;
	margin-top: 130px;
	font-family: Oswald, sans-serif;
	color: white;
	font-size: 18px;
}

.black_container {
	margin-top: 15px;
}

/* Show Project View */

.ind_project_content {
  margin: auto;
	width:1200px;
}
