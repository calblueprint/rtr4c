#about_banner {
  float: left;
  background-image: url("/assets/about_banner-ed704a60bd2003726a875ea67568245a.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: top;
  height: 350px;
  width: 100%;
  border-top: 1px solid #CCCCCC;
  border-bottom: 1px solid #CCCCCC;
}

#about_title {
  margin-top: 100px;
}

#about {
  margin-top: 100px;
  margin-bottom: 100px;
  text-align: left;
}

.picture {
  float: left;
  border: 10px solid #333333;
  height: 380px;
  width: 380px;
  margin-top: 100px;
  border-radius: 200px;
  background: #fff;
}

.profile {
  float: left;
  height: 400px;
  width: 600px;
  margin-top: 100px;
}

.advisory {
  float: left;
  margin: 50px;
  width: 400px;
  height: 400px;
}

.advisory_picture {
  width: 380px;
  height: 380px;
  border-radius: 200px;
  border: 10px solid #333333;
  background: #fff;
}

.about_media {
  float: left;
  width: 200px;
  height: 200px;
  margin: 25px;
}

.about_media:hover {
  cursor: pointer;
}

#homedepot {
  background: url(<%= image_path "homedepot.png"%>);
  background-size: cover;
  margin-left: 150px;
}

#homedepot:hover {
  background: url(<%= image_path "homedepot_alt.png"%>);
  background-size: cover;
}

#chase {
  background: url(<%= image_path "chase.png"%>);
  background-size: cover;
}

#chase:hover {
  background: url(<%= image_path "chase_alt.png"%>);
  background-size: cover;
}

#giants {
  background: url(<%= image_path "giants.png"%>);
  background-size: cover;
}

#giants:hover {
  background: url(<%= image_path "giants_alt.png"%>);
  background-size: cover;
}

.mini {
  float: left;
  width: 250px;
  height: 250px;
}

.mini_picture {
  margin: 25px;
  margin-bottom: 0px;
  width: 190px;
  height: 190px;
  border-radius: 100px;
  border: 5px solid #333333;
  background: #fff;
}