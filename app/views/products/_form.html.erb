<%= form_for @product, html: {multipart: true} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>

  <% if @product.photos.empty? %>
    <%= f.file_field :image %>
  <% else %>
    <%= f.fields_for :photos do |photo_form| %>
      <p>
        <%= photo_form.label :name %><br>
        <%= photo_form.text_field :name %>
      </p>

      <p>
        <%= photo_form.file_field :image %>
      </p>

      <%= photo_form.link_to_remove "Remove photo" %>
    <% end %>
  <% end %>

  <p>
    <%= f.submit %>
  </p>
<% end %>