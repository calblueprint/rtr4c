<%= form_for(@product, html: { multipart: true}) do |f| %>
  <div>
    <%= f.label :name%>
    <%= f.text_field :name %>
  </div>       

  <div>
    <%= f.label :description%>
    <%= f.text_area :description %>
  </div>      

  <div>
    <%= f.label :price%>
    <%= f.text_field :price %>
  </div>      

  <div class="file_field">
     <%= f.fields_for :image do |images_form| %>
       <%= images_form.file_field :image %>
     <% end %>
  </div>
  <%= f.submit @submit_button %>
<% end %>