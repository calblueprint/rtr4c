<div class="container">
  <div class="content">
  <h1> CONTACT </h1>
    <%= form_for @contact do |e| %>
      <% if @contact.errors.any? %>  
        <div class="error_messages">  
          <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this email from being saved:</h2>  
          <ul>  
          <% @contact.errors.full_messages.each do |msg| %>  
            <li><%= msg %></li>  
          <% end %>  
          </ul>
        </div>  
      <% end %>
      <h2>
        <%= e.label "First Name" %>
        <%= e.text_field :fname %>
      </h2>      
      <h2>
        <%= e.label "Last Name" %>
        <%= e.text_field :lname %>
      </h2>      
      <h2>
        <%= e.label "Email" %>
        <%= e.text_field :email %>
      </h2>      
      <h2>
        <%= e.label "Phone" %>
        <%= e.text_field :phone %>
      </h2>      
      <h2>
        <%= e.label "Message" %>
        <%= e.text_area :message %>
      </h2>
      <p>
        <%= e.submit "Send Message" %>
      </p>
    <% end %>
  </div>
</div>
