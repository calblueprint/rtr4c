<%= nested_form_for @project, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= date_select(@project, :date) %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <%= f.fields_for :images do |image_form| %>
    <fieldset>
      <%= image_form.label :name %>
      <%= image_form.text_field :name %>
      <%= image_form.label :photo %>
      <%= image_form.file_field :photo %>
      <%= image_form.link_to_remove "Remove image" %>
    </fieldset>
  <% end %>
  <%= f.link_to_add "Add photo", :images %>
  <div class="submit_spacer"></div>
  <%= f.submit %>
<% end %>