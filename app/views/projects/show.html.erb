<script type="text/javascript" src="assets/jquery.fancybox-1.3.4.pack.js"></script>
<div class="container">
  <div class="ind_project_content">,
    <div id="ind_project_main_title"><h1><%= @project.title %></h1></div>
    <!--<div class="before_after">
      <div id="before">Before</div>
      <div id="after">After</div>
    </div>
    <div class="header_pict">
      <%= safe_image @project %>
    </div>-->
    <h2>Before Images</h2>
    <div id="project_image_block">
      <% @before_pictures.each do |image| %>
        <%= link_to image_tag(image.photo.url, :class => "fancybox_thumbnail"), image.photo.url,
            class: 'fancybox', rel: "before_images", alt: 'Photo' %>
      <% end %>
    </div>

    <h2>After Images</h2>
    <div id="project_image_block">
      <% @after_pictures.each do |image| %>
        <%= link_to image_tag(image.photo.url, :class => "fancybox_thumbnail"), image.photo.url,
            class: 'fancybox', rel: "after_images", alt: 'Photo' %>
      <% end %>
    </div>

    <% if current_user %>
      <div class="admin_buttons">
        <%= link_to 'Edit', edit_project_path(@project) %>
        <%= link_to 'Back', projects_path %>
      </div>
    <% end %>
  </div>
</div>


<div class = "container black_container">
  <div class="content">
    <div class="ind_project_about">
      <div id = "ind_about_title">
        <p id="ind_about">About This Project</p>
      </div>
      <!--<div id="ind_project_line_about"></div>-->
      <div>
        <p class="ind_about_text">
          <br>
          <b>Designers:</b>
          <% @project.designers.each do |designer| %>
            <%= designer_url designer %>,
          <% end %>
          and others!
          <br>
          <br>
          <%= @project.description %>
        </p>
      </div>
    </div>
    <div class="ind_project_volunteers">
      <div id = "volunteer_title">
        <p id ="volunteers_about">Volunteers That Made This Happen</p>
      </div>
      <!--<div id="ind_project_line_volunteer"></div>-->
      <div>
        <p id="ind_volunteer_text"><%= @project.volunteers %></p>
      </div>
    </div>
  </div>
</div>
