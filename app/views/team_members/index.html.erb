        <%= image_tag(first_image(designer), class: "mini_picture") %>
        <% if current_user %>
        <div class="admin_buttons">
          <p><%= link_to 'Edit', edit_team_member_path(designer) %></p>
          <p><%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
        <% end %>
      </div>
    <% end %>
    <% @volunteers.each do |volunteer| %>
      <div class="mini tooltip" title="<%= volunteer.name %>">
        <%= image_tag(first_image(volunteer), class: "mini_picture") %>
        <% if current_user %>
        <div class="admin_buttons">
          <p><%= link_to 'Edit', edit_team_member_path(volunteer) %></p>
          <p><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>